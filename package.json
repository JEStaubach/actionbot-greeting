    },
    "rules": {
      "max-len": [
        "error",
        {
          "code": 110
        }
      ],
      "no-console": [
        "error",
        {
          "allow": [
            "log",
            "warn",
            "error"
          ]
        }
      ]
    },
    "settings": {}
  },
  "devDependencies": {
    "eslint": "^6.7.2",
